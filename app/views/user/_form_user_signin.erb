<div id="form_signin">
  <form action="/signin" method="POST">
    <table>
      <tr>
        <td>Username:</td>
        <td><input type="text" name="user[username]" value="<%= login_username %>" class="field-light"></td>
      </tr>
      <tr>
        <td>Password:</td>
        <td><input type="password" name="user[password]" value="" class="field-light"></td>
      </tr>

      <tr>
        <td colspan="2"><input type="submit" value="Sign in" class="button-big button-blue-outline mb1"></td>
      </tr>
    </table>
  </form>

</div>


